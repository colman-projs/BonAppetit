<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment"
    app:defaultNavHost="true">
    <fragment
        android:id="@+id/studentListRvFragment"
        android:name="com.example.BonAppetit.feed.StudentListRvFragment"
        android:label="Students"
        tools:layout="@layout/fragment_students_list">
        <action
            android:id="@+id/action_studentListRvFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.BonAppetit.feed.StudentDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_student_details">
        <argument
            android:name="studentId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment2"
        android:name="com.example.BonAppetit.common.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment2" />
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.BonAppetit.feed.AddStudentFragment"
        android:label="Add New Student"
        tools:layout="@layout/fragment_add_student" />
    <action android:id="@+id/action_global_addStudentFragment" app:destination="@id/addStudentFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.BonAppetit.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_studentListRvFragment"
            app:destination="@id/studentListRvFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.BonAppetit.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_studentListRvFragment"
            app:destination="@id/studentListRvFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>